{
    "name": "code-snippet-noter",
    "displayName": "Code Snippet Noter",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:code-snippet-noter.saveToNoteCloud"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "code-snippet-noter.saveToNoteCloud",
                "title": "Save Code Snippet to Note Cloud"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "code-snippet-noter.saveToNoteCloud",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Code Snippet Noter",
            "properties": {
                "codeSnippetNoter.noteCloudApiUrl": {
                    "type": "string",
                    "default": "",
                    "description": "URL of your note cloud API endpoint"
                },
                "codeSnippetNoter.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for authentication"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint . --ext .ts,.tsx",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@vscode/test-electron": "^2.3.0",
        "eslint": "^8.0.0",
        "typescript": "^4.5.0"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "simple-git": "^3.19.0"
    }
}
